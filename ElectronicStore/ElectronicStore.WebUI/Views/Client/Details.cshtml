@model ElectronicStore.WebUI.Models.ClientIndexView

<div id="clientModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="nameModalOperation" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button class="close" data-dismiss="modal">x</button>
                <h4 class="modal-title">Информация о модели</h4>
            </div>
            <div class="modal-body">
                <h3><b>Name</b> : @Model.FirstName @Model.LastName</h3>
                <h3><b>Address</b> : @Model.Address</h3>
                <h3><b>Email</b> : @Model.Email</h3>
                <h3><b>Birthday</b> : @Model.Birth</h3>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $('#clientModal').ready(() => {
        showClientForm();
    })

    function showClientForm() {
        $("#clientModal").modal();
    }
</script>
